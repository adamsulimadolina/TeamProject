@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}


    <div class="cities" style="background-color:#2c3136">
        <div class="container">
            <div class="col-md-6 offset-3">
                <section>
                    <form id="account" method="post">
                        <h5 id="login">Logowanie</h5>

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group ">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label> Hasło</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="Input.RememberMe" />
                                    Zapamiętaj mnie
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button id="button" type="submit" style="background-color:gray" class="btn btn-primary">Zaloguj</button>
                        </div>

                    </form>
                </section>
                <p>
                    <a style="color:#2c3136; text-decoration:none; font-weight:500" id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                </p>
            </div>

        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


