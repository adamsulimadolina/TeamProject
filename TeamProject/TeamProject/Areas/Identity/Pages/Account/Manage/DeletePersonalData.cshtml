@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Usunięcie Konta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<div class="alert alert-warning" style="background-color:gray; color:white" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>Proces usunięcia konta jest nie odwracalny. W razie problemów prosimy o kontakt z administracją</strong>
    </p>
</div>

<div class="row">
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password">Podaj Hasło</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" style="background-color:#2c3136" type="submit">Usuń Konto</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}