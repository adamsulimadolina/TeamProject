@model FormGenerator.Models.Patient
    <script>
        sessionStorage.removeItem('key');
    </script>

<h4>Dodaj ID nowego pacjenta do bazy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPatient" class="control-label">ID Pacjenta</label>
                <input asp-for="IdPatient" class="form-control" value=0 />
                <span asp-validation-for="IdPatient" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Patient" >Powrót do menu głównego</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
