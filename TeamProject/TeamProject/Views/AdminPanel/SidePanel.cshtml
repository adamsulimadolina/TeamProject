@using Microsoft.AspNetCore.Http
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap"
          rel="stylesheet" />
    <script src="https://kit.fontawesome.com/bb9f6e46c7.js"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/bootstrap-table.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/page.css" />
    <title>Template</title>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.0.js"></script>
</head>
<body>
    <nav class="navbar-custom">
        <ul class="navbar-nav-custom">
            <li class="logo">
                <a class="custom-link">
                    <i class="fas fa-angle-double-right fa-3x"></i>
                </a>
            </li>

            <li class="navbar-item-custom">
                <a class="custom-link" asp-controller="AdminPanel" asp-action="Index">
                    <i class="fas fa-home fa-2x"></i><span class="link-text">Home</span>
                </a>
            </li>
            <li class="navbar-item-custom">
                <a class="custom-link" asp-action="Logi" asp-controller="AdminPanel">
                    <i class="fas fa-clipboard fa-2x"></i><span class="link-text">Logi</span>
                </a>
            </li>
            <li class="navbar-item-custom">
                <a class="custom-link" asp-action="Users" asp-controller="AdminPanel">
                    <i class="fas fa-users fa-2x"></i><span class="link-text">Użytkownicy</span>
                </a>
            </li>
            <li class="navbar-item-custom">
                <a class="custom-link" asp-area="Identity" asp-page="/Account/CreateUser">
                    <i class="fas fa-user-plus fa-2x"></i><span class="link-text">Stwórz</span>
                </a>
            </li>

            <li class="navbar-item-custom">
                <a class="custom-link" asp-controller="Forms" asp-action="Index">
                    <i class="fas fa-sign-out-alt fa-2x"></i><span class="link-text">Home</span>
                </a>
            </li>
        </ul>
    </nav>
    <main>
        @RenderBody()
    </main>
    <script src="~/js/template.js"></script>
</body>
</html>
