@model IEnumerable<FormGenerator.Models.Field>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Dodaj nową zależność do formularza początkowego</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Pytanie
            </th>
            <th>
                Typ Pytania
            </th>
            <th>
                ...
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="AddConnection" asp-route-id="@item.Id">Edycja</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
