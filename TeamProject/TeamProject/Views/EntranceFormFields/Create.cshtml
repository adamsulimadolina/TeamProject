@model FormGenerator.Models.Field

@{
    ViewData["Title"] = "Create";
}

<div class="row" style="padding-top:40px">

    <div class="col-md-4 offset-4">

        <span>
            <h3 class="text-center">Stwórz nowe pole</h3>
        </span>

    </div>
</div>
<div>
    <a style="color:black" asp-area="" asp-controller="EntranceFormFields" asp-action="Index">
        <img src="~/arrow2.png" class="rounded-circle" alt="Add" width="30" height="30">
    </a>
</div>

<div class="row mb-5 mt-4 ">
    <div class="col-lg-3 col-md-6 align-self-center mx-auto text-color-create p-3 shadow p-3 mb-5 bg-white rounded">
        <form asp-action="Create" class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class=" btn-outline-secondary" asp-route-Type="checkbox" type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<script>
    sessionStorage.removeItem('key');
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
