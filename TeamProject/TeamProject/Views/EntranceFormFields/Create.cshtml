@model FormGenerator.Models.Field

@{
    ViewData["Title"] = "Create";
}

<div class="row" style="padding-top:40px">
    <div class="col-md-4 offset-4">
        <h4 class="text-center">Stwórz nowe pole</h4>
    </div>
    <div class="col">
        <a asp-action="Index" asp-controller="Patient"  class="buttonada">Powrót do listy pytań</a>
    </div>
</div>


<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-route-Type="checkbox" type="submit" value="Dodaj"/>
            </div>
        </form>
    </div>
</div>


<script>
    sessionStorage.removeItem('key');
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
