@model FormGenerator.Models.Category

@{
    ViewData["Title"] = "Create";
}




<div class="row" style="padding-top:40px">
    <div>
        <br />
        <a style="color:black" asp-controller="Forms" asp-action="Index">
            <img src="~/arrow2.png" class="rounded-circle" alt="Add" width="30" height="30">
        </a>
        <br />
    </div>
    <div class="col-md-4 offset-4">
        <span>
            <h3 class="text-center">Nowa kategoria</h3>
        </span>
    </div>

</div>

<hr />





<div class="row mb-5 mt-4 ">
    <div  class="col-lg-3 col-md-6 align-self-center mx-auto text-color-create p-3 shadow p-3 mb-5 bg-white rounded">
        <form asp-action="CreateParentCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label hidden asp-for="Id" class="control-label"></label>
                <input hidden asp-for="Id" class="form-control" value=0 />
                <span hidden asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

