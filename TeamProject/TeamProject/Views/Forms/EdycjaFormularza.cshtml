@model FormContainsField
@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dodaj/usuń pole</title>
</head>
<body>
    <form asp-action="EdycjaFormularza" method="post">
        <p>
            <a asp-area="" asp-controller="Fields" asp-action="AddNewField" asp-route-id="@Model.IdForm">Dodaj nowe pola</a>
        </p>
        <p>
            <input asp-for="IdForm" style="visibility:hidden" />
        </p>
        <table class="table table-striped">

            @for (int i = 0; i < Model.fields.Count(); i++)
            {
            <tr>
                <td>
                    <label asp-for="fields[i].NameField" style="font-weight:bold; font-size:large">@Model.fields[i].NameField</label>
                    <input asp-for="fields[i].NameField" hidden />
                    <input asp-for="fields[i].IdField" hidden />
                </td>

                <td>
                    <label>Czy formularz ma zawierać pole?</label>
                    <select asp-for="fields[i].ContainsField">
                        <option value="">Wybierz opcję</option>
                        <option value="true">Tak</option>
                        <option value="false">Nie</option>
                    </select>
                </td>
                <td>
                    <a asp-controller="Fields" asp-action="EditNewField" asp-route-id="@Model.fields[i].IdField" asp-route-form="@Model.IdForm">Edit</a> |
                    <a asp-controller="Fields" asp-action="DeleteNewField" asp-route-id="@Model.fields[i].IdField" asp-route-form="@Model.IdForm">Delete</a> |
                    <a asp-controller="Fields" asp-action="DetailsNewField" asp-route-id="@Model.fields[i].IdField" asp-route-form="@Model.IdForm">Details</a>
                </td>
            </tr>
            }
        </table>
        <button type="submit">Zapisz</button>
    </form>
</body>
</html>

